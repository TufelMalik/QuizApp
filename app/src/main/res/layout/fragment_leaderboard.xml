<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.LeaderboardFragment">

  <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:gravity="center"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

      <androidx.cardview.widget.CardView
          android:layout_width="113dp"
          android:layout_gravity="center"
          android:layout_height="150dp"
          android:layout_marginTop="10dp"
          android:layout_marginRight="10dp"
          android:layout_marginLeft="10dp"
          app:cardBackgroundColor="@color/dark_main_color"
          app:cardCornerRadius="20dp"
          app:cardElevation="10dp"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintHorizontal_bias="0.5"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintVertical_bias="0.5">


        <LinearLayout
            android:layout_width="113dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

          <de.hdodenhof.circleimageview.CircleImageView
              android:id="@+id/rankImage_2nd"
              android:layout_width="60dp"
              android:layout_height="60dp"
              android:layout_gravity="center"
              android:layout_marginTop="13dp"
              android:src="@drawable/profile_person_img" />

          <TextView
              android:id="@+id/txtUserName_2nd"
              android:layout_width="wrap_content"
              android:layout_height="29dp"
              android:layout_gravity="center"
              android:layout_marginTop="10dp"
              android:fontFamily="@font/faustina_medium"
              android:maxLength="10"
              android:text="User Name"
              android:textColor="@color/white"
              android:textSize="17dp"
              android:textStyle="bold" />

          <TextView
              android:id="@+id/txtScore_2nd"
              android:layout_width="wrap_content"
              android:layout_height="29dp"
              android:layout_gravity="center"
              android:fontFamily="@font/faustina_medium"
              android:text="99"
              android:textColor="@color/white"
              android:textSize="21dp"
              android:textStyle="bold" />
          />


        </LinearLayout>
      </androidx.cardview.widget.CardView>

      <androidx.cardview.widget.CardView
          android:layout_width="130dp"
          android:layout_height="160dp"
          app:cardCornerRadius="20dp"
          app:cardBackgroundColor="@color/dark_main_color"
          android:layout_margin="10dp"
          app:cardElevation="10dp"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintHorizontal_bias="0.5"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintVertical_bias="0.5">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5">

          <de.hdodenhof.circleimageview.CircleImageView
              android:id="@+id/rankImage_1st"
              android:layout_width="75dp"
              android:layout_gravity="center"
              android:layout_height="75dp"
              android:layout_margin="10dp"
              android:src="@drawable/profile_person_img" />

          <TextView
              android:id="@+id/txtUserName_1st"
              android:layout_width="wrap_content"
              android:layout_height="30dp"
              android:text="User Name"
              android:maxLength="11"
              android:textStyle="bold"
              android:textSize="18dp"
              android:layout_gravity="center"
              android:fontFamily="@font/faustina_medium"
              android:textColor="@color/white"
              />

          <TextView
              android:id="@+id/txtScore_1st"
              android:layout_width="wrap_content"
              android:layout_height="30dp"
              android:text="100"
              android:textStyle="bold"

              android:layout_gravity="center"
              android:textSize="22dp"
              android:fontFamily="@font/faustina_medium"
              android:textColor="@color/white"
              />
        </LinearLayout>
      </androidx.cardview.widget.CardView>
      <androidx.cardview.widget.CardView
          android:layout_width="113dp"
          android:layout_gravity="center"
          android:layout_height="150dp"
          android:layout_marginTop="10dp"
          android:layout_marginRight="10dp"
          android:layout_marginLeft="10dp"
          app:cardBackgroundColor="@color/dark_main_color"
          app:cardCornerRadius="20dp"
          app:cardElevation="10dp"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintHorizontal_bias="0.5"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintVertical_bias="0.5">


        <LinearLayout
            android:layout_width="113dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

          <de.hdodenhof.circleimageview.CircleImageView
              android:id="@+id/rankImage_3rd"
              android:layout_width="60dp"
              android:layout_height="60dp"
              android:layout_gravity="center"
              android:layout_marginTop="13dp"
              android:src="@drawable/profile_person_img" />

          <TextView
              android:id="@+id/txtUserName_3rd"
              android:layout_width="wrap_content"
              android:layout_height="29dp"
              android:layout_gravity="center"
              android:layout_marginTop="10dp"
              android:fontFamily="@font/faustina_medium"
              android:maxLength="10"
              android:text="User Name"
              android:textColor="@color/white"
              android:textSize="17dp"
              android:textStyle="bold" />

          <TextView
              android:id="@+id/txtScore_3rd"
              android:layout_width="wrap_content"
              android:layout_height="29dp"
              android:layout_gravity="center"
              android:fontFamily="@font/faustina_medium"
              android:text="99"
              android:textColor="@color/white"
              android:textSize="21dp"
              android:textStyle="bold" />
          />


        </LinearLayout>
      </androidx.cardview.widget.CardView>
    </LinearLayout>


  </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>